{
	"manifest_version":2,
	"icons": {
    "128": "icon2_128_128.png"
	},
	"name":"Kindle Optimizer",
	"description":"Adds instant Google Search and Translate functionality to the Kindle Cloud Reader.",
	"version":"2.4" ,

	"page_action": {
		"default_icon":"icon.png",
		"default_title":"Kindle Optimizer",
		"default_popup":"popup.html"
	},
	
	"content_scripts":[
		{
			"matches":["https://read.amazon.com/*", "https://read.amazon.ca/*", "https://read.amazon.uk/*", "https://lesen.amazon.de/*", "https://lire.amazon.fr/*",
			"https://leggi.amazon.it/*", "https://ler.amazon.com.br/*", "https://read.amazon.com.au/*"], 
			"js":["csOptimizer.js", "jquery-1.10.2.js"],
			"all_frames": true
		}
	],
	
	"background":{
		"scripts": ["eventPage.js"],
		"persistent":false
	},
	
	 "web_accessible_resources": ["script.js"],
	 
	 "permissions":[
		"tabs",
		"https://read.amazon.com/*"
	]
}